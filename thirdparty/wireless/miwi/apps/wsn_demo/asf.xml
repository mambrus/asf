<asf xmlversion="1.0">

	<!-- **************************************************************************************************** -->
	<module type="application" id="thirdparty.wireless.miwi.apps.wsn_demo" caption="WSN Demo">
		<info type="description" value="summary">
		The MiWi based WSNDemo application implements a typical wireless sensor network scenario, in which one central node collects the data from a network of sensors and passes this data over a serial connection for further processing. In the case of the WSNDemo this processing is performed by the WSNMonitor PC application
		</info>

		<build type="c-source" value="main.c"/>
		<build type="c-source" value="wsndemo.c"/>
		<build type="c-source" value="commands.c"/>
		<build type="header-file"   value="miwi_config.h"/>
		<build type="header-file"   value="miwi_config_mesh.h"/>
		<build type="header-file"   value="config.h"/>
		<build type="header-file"   value="commands.h"/>
		<build type="header-file"   value="wsndemo.h"/>
		<build type="include-path" value="."/>
		<build type="distribute" subtype="user-file" value="wsnmonitor_setup.exe"/>
		<!-- ++++++++++++++++++++++++++++++++++++++++++++++REQUIRE++++++++++++++++++++++++++++++++++++++++++++++. -->
		<require idref="thirdparty.wireless.addons.sio2host"/>
		<require idref="thirdparty.wireless.miwi"/>
		<!-- .................................................................................................... -->
		<device-support-alias value="miwi_support"/>
		<!-- .................................................................................................... -->
		<info type="keyword" value="technology">
			<keyword value="Wireless"/>
			<keyword value="Communication"/>
		</info>
		<!-- **************************************************************************************************** -->
		<info type="gui-flag" value="move-to-root"/>
	</module>
</asf>
