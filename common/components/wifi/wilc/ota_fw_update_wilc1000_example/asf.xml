<asf xmlversion="1.0">
	<select-by-device id="common.components.wifi.wilc1000.ota_firmware_update_wilc1000_example">
		<module type="application" id="common.components.wifi.wilc1000.ota_firmware_update_wilc1000_example#1" caption="WILC1000 OTA Firmware Update Example">
			<!-- Summary Description -->
			<info type="description" value="summary">
				This example demonstrates how to retrieve a firmaware from an HTTP web server and flash it to SAM4S using the WILC1000 Wi-Fi module.
			</info>

			<!-- Source -->
			<build type="include-path" value="."/>
			<build type="c-source" value="main.c"/>
			<build type="c-source" value="ota_fw_update.c"/>
			<build type="header-file" value="ota_fw_update.h"/>
			<build type="include-path" value="iot"/>
			<build type="include-path" value="iot/http"/>
			<build type="c-source" value="iot/stream_writer.c"/>
			<build type="header-file" value="iot/stream_writer.h"/>
			<build type="c-source" value="iot/sw_timer.c"/>
			<build type="header-file" value="iot/sw_timer.h"/>
			<build type="c-source" value="iot/http/http_client.c"/>
			<build type="header-file" value="iot/http/http_client.h"/>
			<build type="header-file" value="iot/http/http_entity.h"/>
			<build type="header-file" value="iot/http/http_header.h"/>

			<!-- Device support -->
			<device-support value="sam4s"/>

			<!-- Required modules -->
			<require idref="common.components.wifi.wilc1000"/>
			<require idref="common.services.basic.clock"/>
			<require idref="common.utils.osprintf"/>
			<require idref="sam.drivers.rtt"/>
			<require idref="sam.services.flash"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
	</select-by-device>
</asf>
