<asf xmlversion="1.0">
	<select-by-device id="common.components.wifi.wilc1000.ap_scan_with_rssi_example">
		<module type="application" id="common.components.wifi.wilc1000.ap_scan_with_rssi_example#1" caption="WILC1000 AP Scan and RSSI Example">
			<!-- Summary Description -->
			<info type="description" value="summary">
				This example demonstrates how to scan for Access Point (AP) and also display its signal strength (RSSI) using the WILC1000 Wi-Fi module.
			</info>

			<!-- Source -->
			<build type="include-path" value="."/>
			<build type="c-source" value="ap_scan_with_rssi.c"/>
			<build type="header-file" value="ap_scan_with_rssi.h"/>
			<build type="c-source" value="main.c"/>

			<!-- Device support -->
			<device-support value="sam4s"/>
			<device-support value="samv71"/>
			
			<!-- Required modules -->
			<require idref="common.components.wifi.wilc1000"/>
			<require idref="common.services.basic.clock"/>
			<require idref="common.utils.osprintf"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
	</select-by-device>
</asf>
