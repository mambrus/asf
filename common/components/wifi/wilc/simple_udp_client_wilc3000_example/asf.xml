<asf xmlversion="1.0">
	<select-by-device id="common.components.wifi.wilc3000.simple_udp_client_example">
		<module type="application" id="common.components.wifi.wilc3000.simple_udp_client_example#1" caption="WILC3000 UDP Client Example">
			<!-- Summary Description -->
			<info type="description" value="summary">
				This example implements an Simple UDP Client.
			</info>

			<!-- Source -->
			<build type="include-path" value="."/>
			<build type="c-source" value="udp_client.c"/>
			<build type="header-file" value="udp_client.h"/>
			<build type="c-source" value="main.c"/>
			<build type="include-path" value="script"/>
			<build type="distribute" subtype="file" value="script/udpserver.py"/>
			
			<!-- Device support -->
			<device-support value="sam4s"/>
			<device-support value="samv71"/>
			
			<!-- Required modules -->
			<require idref="common.components.wifi.wilc3000"/>
			<require idref="common.services.basic.clock"/>
			<require idref="common.utils.osprintf"/>
			<info type="gui-flag" value="move-to-root"/>
		</module>
	</select-by-device>
</asf>
